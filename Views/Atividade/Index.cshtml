@model List<Atividade>

!-- model é a lista de atividades que vem do controller AtividadeController, método Index() --!
!-- Model com maisculo para tratar do dado inserido na view --!

<div class="container">
    <div class="row">
        <div class="col-4">
            <h1>Pendentes</h1>
            @if (Model.Count() > 0)
            {
                @foreach (var atividade in Model.Where(x => x.Status.Nome == "Pendente"))
                {
                    <div class="card text-center">
                        <div class="card-header">
                            @atividade.Status.Nome
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@atividade.Titulo</h5>
                            <p class="card-text">@atividade.Descricao</p>
                            <a href="#">Próximo card</a>
                        </div>
                        <div class="card-footer text-body-secondary">
                            @atividade.DataCriacao.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-4">

        </div>
        <div class="col-4">

        </div>
    </div>
</div>